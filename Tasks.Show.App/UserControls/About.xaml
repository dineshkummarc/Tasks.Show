		    <Button x:Name="SelaButton" Click="SelaButton_Click" Style="{DynamicResource InvisibleButton}" VerticalAlignment="Bottom" Margin="211,0,97,85" Height="38" Cursor="Hand" />
		</Grid>
        
	</Grid>
</UserControl>
